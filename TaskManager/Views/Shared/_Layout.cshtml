@using TaskManager.Services
@using TaskManager.Services.Interfaces
@using TaskManager.View.Services.Interfaces

@inject IAuthService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Documents" asp-action="Index">Документы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Employees" asp-action="Index">Сотрудники</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (authService.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @authService.FullName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" style="min-width: 220px;">
                                    @if (authService.IsAuthenticated)
                                    {
                                        <li>
                                            <a class="dropdown-item text-dark" asp-controller="Accounts" asp-action="ChangePassword" asp-route-id="@authService.CurrentUserId">
                                                <i class="bi bi-key"></i> Сменить пароль
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <form method="post" asp-controller="Accounts" asp-action="Logout" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item text-danger w-100">
                                                <i class="bi bi-box-arrow-right"></i> Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Accounts" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Вход в систему
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="padding-left: 50px; padding-right: 50px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>