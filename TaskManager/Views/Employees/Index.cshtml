@using TaskManager.Domain.Services
@using TaskManager.View.ViewModel.Employees

@model IndexEmployeesViewModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Сотрудники";
}

<style>
    .required-field::after {
        content: " *";
        color: #dc3545;
    }
</style>

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">
                        <i class="fas fa-users me-2 text-primary"></i>Сотрудники
                    </h5>
                    <p class="text-muted mb-0 small">Управление сотрудниками организации</p>
                </div>
                <div class="bg-light rounded px-2 py-1">
                    <span class="text-muted small">Всего: <strong>@Model.Employees.Count</strong></span>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Employees.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light py-2">
                        <h6 class="mb-0">
                            <i class="fas fa-list me-2"></i>Список сотрудников
                        </h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">
                                            Фамилия и инициалы
                                        </th>
                                        <th>
                                            Подразделение
                                        </th>
                                        @if (authService.IsAdmin)
                                        {
                                            <th class="text-center">
                                                Действия
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.Employees)
                                    {
                                        <tr>
                                            <td class="ps-3 fw-medium">@employee.FullName</td>
                                            <td>
                                                <span class="badge bg-secondary bg-opacity-25 text-dark">@employee.Department</span>
                                            </td>
                                            @if (authService.IsAdmin)
                                            {
                                                <td class="text-center">
                                                    <a asp-controller="Employees"
                                                       asp-action="Edit"
                                                       asp-route-id="@employee.Id"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Редактировать">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-warning">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-users fa-2x text-warning mb-2"></i>
                        <h6 class="text-warning mb-2">Сотрудники не найдены</h6>
                        <p class="text-muted mb-0 small">По вашему запросу ничего не найдено</p>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (authService.IsAdmin)
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card shadow-sm border-success">
                    <div class="card-header bg-success text-white py-2">
                        <h6 class="mb-0">
                            <i class="fas fa-user-plus me-2"></i>Добавить нового сотрудника
                        </h6>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Create" asp-controller="Employees" class="row g-3 needs-validation">

                            @if (Model.TextFailedCreatedEmployee != null)
                            {
                                <div class="col-12">
                                    <div class="alert alert-danger alert-dismissible fade show py-2" role="alert">
                                        <i class="fas fa-exclamation-circle me-1"></i>
                                        @Model.TextFailedCreatedEmployee
                                    </div>
                                </div>
                            }

                            <div class="col-md-4">
                                <label class="form-label required-field">
                                    <i class="fas fa-user me-2 text-muted"></i>Фамилия и инициалы
                                </label>
                                <input type="text" class="form-control" id="FullName" name="FullName"
                                       value="@Model.FailedCreatedEmployee?.FullName" placeholder="Иванов И.И." required>
                                <div class="invalid-feedback">Введите фамилию и инициалы</div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label required-field">
                                    <i class="fas fa-building me-2 text-muted"></i>Подразделение
                                </label>
                                <input type="text" class="form-control" id="Department" name="Department"
                                       value="@Model.FailedCreatedEmployee?.Department" placeholder="Отдел разработки" required>
                                <div class="invalid-feedback">Введите подразделение</div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label required-field">
                                    <i class="fas fa-user-circle me-2 text-muted"></i>Логин
                                </label>
                                <input type="text" class="form-control" id="Login" name="Login"
                                       value="@Model.FailedCreatedEmployee?.Login" placeholder="ivanovii" required>
                                <div class="invalid-feedback">Введите логин</div>
                            </div>

                            <div class="col-12 mt-3">
                                <button type="submit" class="btn btn-success px-3">
                                    <i class="fas fa-plus me-2"></i>Добавить
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>