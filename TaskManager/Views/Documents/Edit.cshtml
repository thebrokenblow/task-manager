@model TaskManager.Models.Document
@using TaskManager.ViewModel

@{
    ViewData["Title"] = "Редактирование Документа";

    if (ViewData[nameof(EmployeeForSelect)] is not SelectList selecListEmployees)
    {
        throw new Exception();
    }
}

<!-- Форма редактирования документа -->
<div class="card mb-4 mt-5">
    <div class="card-header">
        <h5 class="mb-0">Редактировать документ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Edit" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <!-- Исходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Исходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    <input type="text" class="form-control" asp-for="SourceOutgoingDocumentNumber" required>
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" asp-for="SourceOutgoingDocumentDate" required>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Заказчик</label>
                    <input type="text" class="form-control" asp-for="SourceCustomer" required>
                </div>
            </div>

            <div class="col-12">
                <textarea class="form-control" asp-for="SourceTaskText" rows="3" required></textarea>
            </div>

            <div class="col-12">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="SourceIsExternal" />
                            <label class="form-check-label" asp-for="SourceIsExternal">
                                Внешний документ
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 30px;">Вх.</label>
                            <input type="text" class="form-control" asp-for="SourceOutputDocumentNumber" required>
                        </div>
                    </div>

                    <div class="col">
                        <input type="date" class="form-control" asp-for="SourceOutputDocumentDate" required>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 120px;">Выполнить до</label>
                            <input type="date" class="form-control" asp-for="SourceDueDate" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-1">
                    <label class="form-label" style="min-width: 215px;">Ответственный сотрудник</label>
                    <select asp-for="SourceResponsibleEmployeeId"
                            class="form-control"
                            asp-items="selecListEmployees"
                            required>
                        <option value="">Выберите сотрудника</option>
                    </select>
                </div>
            </div>

            <!-- Выходные данные документа -->
            <div class="col-12 mt-4">
                <h6 class="border-bottom pb-2">Выходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    <input type="text" class="form-control" asp-for="OutputOutgoingNumber">
                </div>
            </div>

            <div class="col-md-4">
                <input type="date" class="form-control" asp-for="OutputOutgoingDate">
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 130px;">Кому направлен</label>
                    <input type="text" class="form-control" asp-for="OutputSentTo">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Передача в рабочем порядке</label>
                    <input type="text" class="form-control" asp-for="OutputTransferredInWorkOrder">
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label" style="min-width: 230px">Признак сдачи ответа</label>
                    <input type="text" class="form-control" asp-for="OutputResponseSubmissionMark">
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsUnderControl" />
                        <label class="form-check-label text-uppercase" asp-for="IsUnderControl">
                            На контроле
                        </label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Сохранить</button>
                        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>