@using TaskManager.Models
@using TaskManager.Services
@using TaskManager.ViewModel
@using TaskManager.Services.Interfaces

@model Document
@inject IAuthService authService

@{
    ViewData["Title"] = "Редактирование Документа";

    if (ViewData[nameof(EmployeeForSelect)] is not SelectList selecListEmployees)
    {
        throw new Exception();
    }

    var isNotReadonly = !Model.IsCompleted && (authService.IsAdmin || authService.CurrentUserId == Model.IdAuthorCreateDocument);
}

<style>
    .readonly-disabled {
        background-color: #e9ecef;
        opacity: 1;
        pointer-events: none;
        cursor: not-allowed;
    }

    .readonly-disabled::placeholder {
        color: #6c757d;
    }
</style>

<!-- Форма редактирования документа -->
<div class="card mb-4 mt-5">
    <div class="card-header">
        <h5 class="mb-0">Редактировать документ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Edit" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <!-- Исходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Исходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    @if (isNotReadonly)
                    {
                        <input type="text" class="form-control" asp-for="SourceOutgoingDocumentNumber" required>
                    }
                    else
                    {
                        <input type="text" class="form-control readonly-disabled" asp-for="SourceOutgoingDocumentNumber" readonly>
                    }
                </div>
            </div>

            <div class="col-md-4">
                @if (isNotReadonly)
                {
                    <input type="date" class="form-control" asp-for="SourceOutgoingDocumentDate" required>
                }
                else
                {
                    <input type="date" class="form-control readonly-disabled" asp-for="SourceOutgoingDocumentDate" readonly>
                }
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Заказчик</label>
                    @if (isNotReadonly)
                    {
                        <input type="text" class="form-control" asp-for="SourceCustomer" required>
                    }
                    else
                    {
                        <input type="text" class="form-control readonly-disabled" asp-for="SourceCustomer" readonly>
                    }
                </div>
            </div>

            <div class="col-12">
                @if (isNotReadonly)
                {
                    <textarea class="form-control" asp-for="SourceTaskText" rows="3" required></textarea>
                }
                else
                {
                    <textarea class="form-control readonly-disabled" asp-for="SourceTaskText" rows="3" readonly></textarea>
                }
            </div>

            <div class="col-12">
                <div class="row align-items-center g-3">
                    <div class="col-auto">
                        <div class="form-check">
                            @if (isNotReadonly)
                            {
                                <input class="form-check-input" asp-for="SourceIsExternal">
                            }
                            else
                            {
                                <input class="form-check-input readonly-disabled" asp-for="SourceIsExternal" readonly>
                                <input type="hidden" asp-for="SourceIsExternal" />
                            }
                            <label class="form-check-label" asp-for="SourceIsExternal">
                                Внешний документ
                            </label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 30px;">Вх(46 ЦНИИ)</label>
                            @if (isNotReadonly)
                            {
                                <input type="text" class="form-control" asp-for="SourceOutputDocumentNumber" required>
                            }
                            else
                            {
                                <input type="text" class="form-control readonly-disabled" asp-for="SourceOutputDocumentNumber" readonly>
                            }
                        </div>
                    </div>

                    <div class="col">
                        @if (isNotReadonly)
                        {
                            <input type="date" class="form-control" asp-for="SourceOutputDocumentDate" required>
                        }
                        else
                        {
                            <input type="date" class="form-control readonly-disabled" asp-for="SourceOutputDocumentDate" readonly>
                        }
                    </div>

                    <div class="col">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0" style="min-width: 120px;">Выполнить до</label>
                            @if (isNotReadonly)
                            {
                                <input type="date" class="form-control" asp-for="SourceDueDate" required>
                            }
                            else
                            {
                                <input type="date" class="form-control readonly-disabled" asp-for="SourceDueDate" readonly>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-1">
                    <label class="form-label" style="min-width: 215px;">Ответственный сотрудник</label>
                    @if (authService.IsAdmin && isNotReadonly)
                    {
                        <select asp-for="IdAuthorCreateDocument"
                                class="form-control"
                                asp-items="selecListEmployees"
                                required>
                            <option value="">Выберите сотрудника</option>
                        </select>
                    }
                    else
                    {
                        <select asp-for="IdAuthorCreateDocument"
                                class="form-control readonly-disabled"
                                asp-items="selecListEmployees"
                                readonly>
                            <option value="">Выберите сотрудника</option>
                        </select>
                        <input type="hidden" asp-for="IdAuthorCreateDocument" />
                    }
                </div>
            </div>

            <!-- Выходные данные документа -->
            <div class="col-12">
                <h6 class="border-bottom pb-2">Выходные данные документа</h6>
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0">Исх.</label>
                    @if (!Model.IsCompleted)
                    {
                        <input type="text" class="form-control" asp-for="OutputOutgoingNumber">
                    }
                    else
                    {
                        <input type="text" class="form-control readonly-disabled" asp-for="OutputOutgoingNumber" readonly>
                    }
                </div>
            </div>

            <div class="col-md-4">
                @if (!Model.IsCompleted)
                {
                    <input type="date" class="form-control" asp-for="OutputOutgoingDate">
                }
                else
                {
                    <input type="date" class="form-control readonly-disabled" asp-for="OutputOutgoingDate" readonly>
                }
            </div>

            <div class="col-md-4">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 130px;">Кому направлен</label>
                    @if (!Model.IsCompleted)
                    {
                        <input type="text" class="form-control" asp-for="OutputSentTo">
                    }
                    else
                    {
                        <input type="text" class="form-control readonly-disabled" asp-for="OutputSentTo" readonly>
                    }
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 250px;">Передан в работу по приказу</label>
                    @if (!Model.IsCompleted)
                    {
                        <input type="text" class="form-control" asp-for="OutputTransferredInWorkOrder">
                    }
                    else
                    {
                        <input type="text" class="form-control readonly-disabled" asp-for="OutputTransferredInWorkOrder" readonly>
                    }
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <div class="form-check">
                        @if (!Model.IsCompleted)
                        {
                            <input class="form-check-input" asp-for="IsUnderControl" />
                        }
                        else
                        {
                            <input class="form-check-input readonly-disabled" asp-for="IsUnderControl" readonly>
                            <input type="hidden" asp-for="IsUnderControl" />
                        }
                        <label class="form-check-label text-uppercase" asp-for="IsUnderControl">
                            На контроле
                        </label>
                    </div>
                    <div>
                        @if (!Model.IsCompleted)
                        {
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>