@using TaskManager.Models
@using TaskManager.Repositories.Interfaces
@using TaskManager.Services
@using TaskManager.Services.Interfaces
@using TaskManager.View.Services
@using TaskManager.View.Services.Interfaces
@using TaskManager.View.ViewModel
@using TaskManager.ViewModel

@model IndexDocumentViewModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Документы";

    var statusInactiveButton = "disabled";
    var pageSizeItems = new List<int> { 50, 75, 100, 200 };
}

@functions {
    private const int OverdueDay = 0;
    private const int WarningDay = 3;
    private const int NormalDay = 7;

    private const string TableDanger = "table-danger";
    private const string TableWarning = "table-warning";
    private const string TableSuccess = "table-success";
    private const string FontWeightBold = "fw-bold";


    public string GetRowClass(FilteredRangeDocument document)
    {
        var currentDate = DateOnly.FromDateTime(DateTime.Now);
        int daysUntilDue = document.SourceDueDate.DayNumber - currentDate.DayNumber;

        if (daysUntilDue <= OverdueDay)
        {
            return TableDanger;
        }

        if (daysUntilDue <= WarningDay)
        {
            return TableWarning;
        }

        if (daysUntilDue <= NormalDay)
        {
            return TableSuccess;
        }

        return string.Empty;
    }

    public string IsSpecialDocument(FilteredRangeDocument document)
    {
        if (document.IsUnderControl)
        {
            return FontWeightBold;
        }

        return string.Empty;
    }
}

@if (authService.IsAuthenticated)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Документы</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Создать документ
        </a>
    </div>
}

<!-- Форма поиска -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-center">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 120px;">Условие поиска</label>
                    <input type="text" class="form-control" name="inputSearch" value="@Model.InputString">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Найти
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2 justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2" style="min-width: 300px;">
                        <label class="form-label mb-0">Показывать по:</label>
                        <select class="form-select" name="pageSize" style="width: 100px;">
                            @foreach (var pageSize in pageSizeItems)
                            {
                                <option value="@pageSize" selected="@(Model.PaginationViewModel.PageSize == pageSize)">@pageSize</option>
                            }
                        </select>
                        <span class="text-muted">записей</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Documents.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Исх(внешн)</th>
                <th>Вх(46 ЦНИИ)</th>
                <th>Тема задания</th>
                <th>Срок</th>
                <th>Исполнитель</th>
                <th>Исх. №</th>
                <th>Исх. дата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model.Documents)
            {
                <tr class="@GetRowClass(document)">
                    <td class="@IsSpecialDocument(document)">@document.SourceOutgoingDocumentNumber</td>
                    <td class="@IsSpecialDocument(document)">@document.SourceOutputDocumentNumber</td>
                    <td class="@IsSpecialDocument(document)">@document.SourceTaskText</td>
                    <td class="@IsSpecialDocument(document)">@document.SourceDueDate</td>
                    <td class="@IsSpecialDocument(document)">@document.AuthorCreateDocument.FullName</td>
                    <td class="@IsSpecialDocument(document)">@document.OutputOutgoingNumber</td>
                    <td class="@IsSpecialDocument(document)">@document.OutputOutgoingDate</td>
                    <td>
                        @*
                            Документ считается удалённым, если автор создания задачи считается admin и автор удаления удаления известен
                        *@
                        @{
                            var isDeletedDocument = document.IdAuthorCreateDocument == AuthService.IdAdmin && document.IdAuthorRemoveDocument != null;
                        }

                        @if (!isDeletedDocument)
                        {
                            <a asp-action="Edit" asp-route-id="@document.Id" class="btn btn-link text-primary p-2 text-decoration-none" title="Редактировать задачу">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>
                        }

                        @if (!isDeletedDocument)
                        {
                            @if (document.IsCompleted)
                            {
                                <form asp-action="ChangeStatusTask" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@document.Id" />
                                    <button type="submit" class="btn btn-link text-warning p-2 text-decoration-none" title="Открыть задачу">
                                        <i class="fas fa-lock-open fa-lg"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="ChangeStatusTask" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@document.Id" />
                                    <button type="submit" class="btn btn-link text-success p-2 text-decoration-none" title="Закрыть задачу">
                                        <i class="fas fa-lock fa-lg"></i>
                                    </button>
                                </form>
                            }
                        }

                        @if (authService.IsAdmin && isDeletedDocument)
                        {
                            <form asp-action="RecoverDeletedTask" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@document.Id" />
                                <button type="submit" class="btn btn-link text-success p-2 text-decoration-none" title="Восстановить запись">
                                    <i class="fas fa-undo-alt fa-lg"></i>
                                </button>
                            </form>
                        }

                        @if (authService.IsAdmin || (document.IdAuthorCreateDocument == authService.CurrentUserId && !document.IsCompleted))
                        {
                            <a asp-action="Delete" asp-route-id="@document.Id" class="btn btn-link text-danger p-2 text-decoration-none" title="Удалить">
                                <i class="fas fa-trash-alt fa-lg"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Пагинация -->
    @if (Model.PaginationViewModel.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Кнопка "Назад" -->
                <li class="page-item @(!Model.PaginationViewModel.HasPrevious ? statusInactiveButton : string.Empty)">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-inputSearch="@Model.InputString"
                       asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                       asp-route-page="@(Model.PaginationViewModel.CurrentPage - 1)">
                        &laquo;
                    </a>
                </li>

                <!-- Номера страниц -->
                @for (int pageNumber = 1; pageNumber <= Model.PaginationViewModel.TotalPages; pageNumber++)
                {
                    <li class="page-item @(pageNumber == Model.PaginationViewModel.CurrentPage ? statusInactiveButton : string.Empty)">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-inputSearch="@Model.InputString"
                           asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                           asp-route-page="@pageNumber">@pageNumber</a>
                    </li>
                }

                <!-- Кнопка "Вперед" -->
                <li class="page-item @(!Model.PaginationViewModel.HasNext ? statusInactiveButton : string.Empty)">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-inputSearch="@Model.InputString"
                       asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                       asp-route-page="@(Model.PaginationViewModel.CurrentPage + 1)">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <h2>По вашему запросу ничего не найдено</h2>
}