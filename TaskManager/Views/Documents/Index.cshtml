@using TaskManager.ViewModel
@model IndexDocumentViewModel

@{
    ViewData["Title"] = "Документы";
    var statusInactiveButton = "disabled";
    var pageSizeItems = new List<int> { 10, 25, 50, 75, 100 };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Документы</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Создать документ
    </a>
</div>

<!-- Форма поиска -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-center">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center gap-2">
                    <label class="form-label mb-0" style="min-width: 120px;">Условие поиска</label>
                    <input type="text" class="form-control" name="inputSearch" value="@Model.InputString">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Найти
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex gap-2 justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2" style="min-width: 300px;">
                        <label class="form-label mb-0">Показывать по:</label>
                        <select class="form-select" name="pageSize" style="width: 100px;">
                            @foreach (var pageSize in pageSizeItems)
                            {
                                <option value="@pageSize" selected="@(Model.PaginationViewModel.PageSize == pageSize)">@pageSize</option>
                            }
                        </select>
                        <span class="text-muted">записей</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Documents.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Исх(внешн)</th>
                <th>Вх(46 ЦНИИ)</th>
                <th>Тема задания</th>
                <th>Срок</th>
                <th>Исполнитель</th>
                <th>Исх. №</th>
                <th>Исх. дата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model.Documents)
            {
                <tr>
                    <td>@document.SourceOutgoingDocumentNumber</td>
                    <td>@document.SourceOutputDocumentNumber</td>
                    <td>@document.SourceTaskText</td>
                    <td>@document.SourceDueDate</td>
                    <td>@document.SourceResponsibleEmployee.FullName</td>
                    <td>@document.OutputOutgoingNumber</td>
                    <td>@document.OutputOutgoingDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@document.Id">Редактировать</a> |
                        <a asp-action="Delete" asp-route-id="@document.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Пагинация -->
    @if (Model.PaginationViewModel.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Кнопка "Назад" -->
                <li class="page-item @(!Model.PaginationViewModel.HasPrevious ? statusInactiveButton : string.Empty)">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-inputSearch="@Model.InputString"
                       asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                       asp-route-page="@(Model.PaginationViewModel.CurrentPage - 1)">
                        &laquo;
                    </a>
                </li>

                <!-- Номера страниц -->
                @for (int pageNumber = 1; pageNumber <= Model.PaginationViewModel.TotalPages; pageNumber++)
                {
                    <li class="page-item @(pageNumber == Model.PaginationViewModel.CurrentPage ? statusInactiveButton : string.Empty)">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-inputSearch="@Model.InputString"
                           asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                           asp-route-page="@pageNumber">@pageNumber</a>
                    </li>
                }

                <!-- Кнопка "Вперед" -->
                <li class="page-item @(!Model.PaginationViewModel.HasNext ? statusInactiveButton : string.Empty)">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-inputSearch="@Model.InputString"
                       asp-route-pageSize="@Model.PaginationViewModel.PageSize"
                       asp-route-page="@(Model.PaginationViewModel.CurrentPage + 1)">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <h2>По вашему запросу ничего не найдено</h2>
}