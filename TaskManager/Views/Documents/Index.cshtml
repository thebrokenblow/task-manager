@using TaskManager.Domain.Model
@using TaskManager.Domain.Model.Documents
@using TaskManager.Domain.Services
@using TaskManager.View.ViewModel
@using TaskManager.View.ViewModel.Employees

@model IndexDocumentViewModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Документы";
}

@functions {
    private const int OverdueDay = 0;
    private const int WarningDay = 3;
    private const int NormalDay = 7;

    private const string TableDanger = "table-danger";
    private const string TableWarning = "table-warning";
    private const string TableSuccess = "table-success";
    private const string FontWeightBold = "fw-bold";

    private const string DisabledStatusButton = "disabled";
    private const string ActiveStatusButton = "active";

    private const string DateFormatDdMmYyyy = "dd.MM.yyyy";

    public string GetRowClass(DocumentForOverviewModel document)
    {
        var currentDate = DateOnly.FromDateTime(DateTime.Now);
        int daysUntilDue = document.TaskDueDateInputDocument.DayNumber - currentDate.DayNumber;

        if (daysUntilDue <= OverdueDay)
        {
            return TableDanger;
        }

        if (daysUntilDue <= WarningDay)
        {
            return TableWarning;
        }

        if (daysUntilDue <= NormalDay)
        {
            return TableSuccess;
        }

        return string.Empty;
    }

    public string IsSpecialDocument(DocumentForOverviewModel document)
    {
        if (document.IsUnderControl)
        {
            return FontWeightBold;
        }

        return string.Empty;
    }
}

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">
                        <i class="fas fa-file-alt me-2 text-primary"></i>Документы
                    </h5>
                    <p class="text-muted mb-0 small">Управление документами и задачами</p>
                </div>
                @if (authService.IsAuthenticated)
                {
                    <a asp-action="Create" class="btn btn-success px-3">
                        <i class="fas fa-plus me-2"></i>Создать документ
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0">
                        <i class="fas fa-search me-1"></i>Поиск документов
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3 align-items-end">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center gap-2">
                                <input type="text" class="form-control" name="inputSearch" value="@Model.InputString"
                                       placeholder="Введите текст для поиска...">
                                <button type="submit" class="btn btn-primary text-nowrap">
                                    <i class="fas fa-search me-1"></i>Найти
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label text-nowrap mb-0">Записей:</label>
                                <select class="form-select" name="pageSize">
                                    <option value="50" selected="@(Model.PagedDocuments.PageSize == 50)">50</option>
                                    <option value="75" selected="@(Model.PagedDocuments.PageSize == 75)">75</option>
                                    <option value="100" selected="@(Model.PagedDocuments.PageSize == 100)">100</option>
                                    <option value="200" selected="@(Model.PagedDocuments.PageSize == 200)">200</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.PagedDocuments.Items.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="fas fa-list me-1"></i>Список документов
                            </h6>
                            <div class="bg-light rounded px-2 py-1">
                                <span class="text-muted small">
                                    Всего: <strong>@Model.PagedDocuments.TotalCount</strong> |
                                    Страница: <strong>@Model.PagedDocuments.PageNumber</strong> из <strong>@Model.PagedDocuments.TotalPages</strong>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Исх(внешн)</th>
                                        <th>Вх(46 ЦНИИ)</th>
                                        <th>Тема задания</th>
                                        <th>Срок</th>
                                        <th>Исполнитель</th>
                                        <th>Исх. №</th>
                                        <th>Исх. дата</th>
                                        @if (authService.IsAuthenticated)
                                        {
                                            <th class="text-center" style="width: 120px;">Действия</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var document in Model.PagedDocuments.Items)
                                    {
                                        <tr class="@GetRowClass(document)">
                                            <td class="@IsSpecialDocument(document)">@document.OutgoingDocumentNumberInputDocument</td>
                                            <td class="@IsSpecialDocument(document)">@document.IncomingDocumentNumberInputDocument</td>
                                            <td class="@IsSpecialDocument(document)">@document.DocumentSummaryInputDocument</td>
                                            <td class="@IsSpecialDocument(document)">@document.TaskDueDateInputDocument.ToString(DateFormatDdMmYyyy)</td>
                                            <td class="@IsSpecialDocument(document)">
                                                <span class="badge bg-secondary bg-opacity-25 text-dark">@document.FullNameResponsibleEmployee</span>
                                            </td>
                                            <td class="@IsSpecialDocument(document)">@document.OutgoingDocumentNumberOutputDocument</td>
                                            <td class="@IsSpecialDocument(document)">
                                                @if (document.OutgoingDocumentDateOutputDocument.HasValue)
                                                {
                                                    @document.OutgoingDocumentDateOutputDocument.Value.ToString(DateFormatDdMmYyyy)
                                                }
                                            </td>
                                            <td class="d-flex">
                                                <div class="d-flex gap-1">
                                                    <a asp-action="Edit" asp-route-id="@document.Id"
                                                       class="btn btn-outline-primary" title="Редактировать">
                                                        <i class="fas fa-pen-to-square"></i>
                                                    </a>

                                                    <form asp-action="ChangeStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@document.Id" />
                                                        <button type="submit" class="btn btn-outline-warning" title="Открыть задачу">
                                                            <i class="fas fa-lock-open"></i>
                                                        </button>
                                                    </form>

                                                    <form asp-action="ChangeStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@document.Id" />
                                                        <button type="submit" class="btn btn-outline-success" title="Закрыть задачу">
                                                            <i class="fas fa-lock"></i>
                                                        </button>
                                                    </form>

                                                    <form asp-action="RecoverDeleted" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@document.Id" />
                                                        <button type="submit" class="btn btn-outline-success" title="Восстановить запись">
                                                            <i class="fas fa-undo-alt"></i>
                                                        </button>
                                                    </form>

                                                    <a asp-action="Delete" asp-route-id="@document.Id"
                                                       class="btn btn-outline-danger" title="Удалить">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Пагинация -->
        @if (Model.PagedDocuments.TotalPages > 1)
        {
            <div class="row mt-3">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(!Model.PagedDocuments.HasPreviousPage ? DisabledStatusButton : string.Empty)">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-inputSearch="@Model.InputString"
                                   asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                   asp-route-page="@(Model.PagedDocuments.PageNumber - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int pageNumber = 1; pageNumber <= Model.PagedDocuments.TotalPages; pageNumber++)
                            {
                                <li class="page-item @(pageNumber == Model.PagedDocuments.PageNumber ? ActiveStatusButton : string.Empty)">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-inputSearch="@Model.InputString"
                                       asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                       asp-route-page="@pageNumber">@pageNumber</a>
                                </li>
                            }

                            <li class="page-item @(!Model.PagedDocuments.HasNextPage ? DisabledStatusButton : string.Empty)">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-inputSearch="@Model.InputString"
                                   asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                   asp-route-page="@(Model.PagedDocuments.PageNumber + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-warning">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-file-alt fa-2x text-warning mb-2"></i>
                        <h6 class="text-warning mb-2">Документы не найдены</h6>
                        <p class="text-muted mb-0 small">По вашему запросу ничего не найдено</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>