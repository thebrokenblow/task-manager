@using TaskManager.Models
@model Document

@{
    ViewData["Title"] = "Удаление документа";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Удаление документа
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5>Информация о документе:</h5>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tbody>
                                        <!-- Исходные данные документа -->
                                        <tr class="table-secondary">
                                            <th colspan="2" class="text-center">Исходные данные документа</th>
                                        </tr>
                                        <tr>
                                            <th class="w-20">Исходящий номер документа:</th>
                                            <td class="w-80">@Model.SourceOutgoingDocumentNumber</td>
                                        </tr>
                                        <tr>
                                            <th>Дата исходящего документа:</th>
                                            <td>@Model.SourceOutgoingDocumentDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th>Заказчик:</th>
                                            <td>@Model.SourceCustomer</td>
                                        </tr>
                                        <tr>
                                            <th>Текст задания:</th>
                                            <td>@Model.SourceTaskText</td>
                                        </tr>
                                        <tr>
                                            <th>Внешний документ:</th>
                                            <td>
                                                @if (Model.SourceIsExternal)
                                                {
                                                    <span class="badge bg-primary">Да</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Нет</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Входящий номер документа:</th>
                                            <td>@Model.SourceOutputDocumentNumber</td>
                                        </tr>
                                        <tr>
                                            <th>Дата входящего документа:</th>
                                            <td>@Model.SourceOutputDocumentDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th>Выполнить до:</th>
                                            <td>@Model.SourceDueDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th>Ответственный:</th>
                                            <td>
                                                @($"{Model.SourceResponsibleEmployee!.FullName} ({Model.SourceResponsibleEmployee.Department})")
                                            </td>
                                        </tr>

                                        <!-- Выходные данные документа -->
                                        <tr class="table-secondary">
                                            <th colspan="2" class="text-center">Выходные данные документа</th>
                                        </tr>
                                        <tr>
                                            <th>Исходящий номер:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.OutputOutgoingNumber))
                                                {
                                                    @Model.OutputOutgoingNumber
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Исходящая дата:</th>
                                            <td>
                                                @if (Model.OutputOutgoingDate.HasValue)
                                                {
                                                    @Model.OutputOutgoingDate.Value.ToString("dd.MM.yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указана</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Кому направлен:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.OutputSentTo))
                                                {
                                                    @Model.OutputSentTo
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Передача в рабочем порядке:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.OutputTransferredInWorkOrder))
                                                {
                                                    @Model.OutputTransferredInWorkOrder
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указана</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Признак сдачи ответа:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.OutputResponseSubmissionMark))
                                                {
                                                    @Model.OutputResponseSubmissionMark
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не указан</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>На контроле:</th>
                                            <td>
                                                @if (Model.IsUnderControl)
                                                {
                                                    <span class="badge bg-primary">Да</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Нет</span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Удалить
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Назад к списку
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>