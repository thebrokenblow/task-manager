@using TaskManager.View.ViewModel
@using TaskManager.View.ViewModel.Employees

@model EmployeePasswordViewModel

@{
    ViewData["Title"] = "Смена пароля";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Смена пароля</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ChangePasswordConfirmed">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Пароль:</label>
                        <input asp-for="Password" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>