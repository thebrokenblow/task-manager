@{
    ViewData["Title"] = "Произошла ошибка";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-circle fa-5x text-danger"></i>
                        </div>
                    </div>

                    <h1 class="display-5 fw-bold text-danger mb-4">Произошла ошибка</h1>

                    <div class="error-message mb-4">
                        <p class="fs-5 text-muted mb-3">
                            При обработке вашего запроса произошла непредвиденная ошибка.
                        </p>
                        <p class="text-muted">
                            Мы уже работаем над устранением проблемы.
                        </p>
                    </div>

                    <div class="action-buttons">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a asp-controller="Documents" asp-action="Index" class="btn btn-primary">
                                    К Документам
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-secondary">
                                    К Сотрудникам
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-icon {
        animation: pulse 2s infinite;
    }

    .card {
        border-radius: 15px;
        border: 1px solid rgba(220, 53, 69, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }
</style>