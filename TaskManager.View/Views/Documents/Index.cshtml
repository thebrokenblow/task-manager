@using TaskManager.Application.Common
@using TaskManager.Domain.Model
@using TaskManager.Domain.Model.Documents
@using TaskManager.Domain.Services
@using TaskManager.Domain.Utils
@using TaskManager.View.Utils
@using TaskManager.View.ViewModel
@using TaskManager.View.ViewModel.Employees

@model IndexDocumentViewModel

@inject IAuthService authService
@inject DocumentStyler documentStyler

@{
    ViewData["Title"] = "Документы";
}

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">
                        <i class="fas fa-file-alt me-2 text-primary"></i>Документы
                    </h5>
                    <p class="text-muted mb-0 small">Управление документами и задачами</p>
                </div>
                @if (authService.IsAuthenticated)
                {
                    <a asp-action="Create" class="btn btn-success px-3">
                        <i class="fas fa-plus me-2"></i>Создать документ
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Форма поиска -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0">
                        <i class="fas fa-search me-1"></i>Поиск документов
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3 align-items-end">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center gap-2">
                                <input type="text" class="form-control" name="inputSearch" value="@Model.InputString"
                                       placeholder="Введите текст для поиска...">
                                <button type="submit" class="btn btn-primary text-nowrap">
                                    <i class="fas fa-search me-1"></i>Найти
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label text-nowrap mb-0">Записей:</label>
                                <select class="form-select" name="pageSize">
                                    <option value="50" selected="@(Model.PagedDocuments.PageSize == 50)">50</option>
                                    <option value="75" selected="@(Model.PagedDocuments.PageSize == 75)">75</option>
                                    <option value="100" selected="@(Model.PagedDocuments.PageSize == 100)">100</option>
                                    <option value="200" selected="@(Model.PagedDocuments.PageSize == 200)">200</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.PagedDocuments.Items.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="fas fa-list me-1"></i>Список документов
                            </h6>
                            <div class="bg-light rounded px-2 py-1">
                                <span class="text-muted small">
                                    Всего: <strong>@Model.PagedDocuments.TotalCount</strong> |
                                    Страница: <strong>@Model.PagedDocuments.PageNumber</strong> из <strong>@Model.PagedDocuments.TotalPages</strong>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center">Исх(внешн)</th>
                                        <th class="text-center">Вх(46 ЦНИИ)</th>
                                        <th class="text-center">Тема задания</th>
                                        <th class="text-center">Срок</th>
                                        <th class="text-center">Исполнитель</th>
                                        <th class="text-center">Исх. №</th>
                                        <th class="text-center">Исх. дата</th>
                                        @if (authService.IsAuthenticated)
                                        {
                                            <th class="text-center">Действия</th>
                                        }
                                        else
                                        {
                                            <th></th> <!-- Пустой заголовок для выравнивания -->
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var document in Model.PagedDocuments.Items)
                                    {
                                        <tr class="@documentStyler.DetermineRowColor(document)">
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">@document.OutgoingDocumentNumberInputDocument</td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">@document.IncomingDocumentNumberInputDocument</td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">@document.DocumentSummaryInputDocument</td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">@document.TaskDueDateInputDocument.ToString(DateFormatDictionary.DateFormatDdMmYyyy)</td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">
                                                <span class="badge bg-secondary bg-opacity-25 text-dark">@document.FullNameResponsibleEmployee</span>
                                            </td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">@document.OutgoingDocumentNumberOutputDocument</td>
                                            <td class="@documentStyler.GetControlHighlight(document) text-center">
                                                @if (document.OutgoingDocumentDateOutputDocument.HasValue)
                                                {
                                                    @document.OutgoingDocumentDateOutputDocument.Value.ToString(DateFormatDictionary.DateFormatDdMmYyyy)
                                                }
                                            </td>
                                            <td>
                                                @if (authService.IsAuthenticated)
                                                {
                                                    <div class="d-flex gap-1 justify-content-center">
                                                        <a asp-action="Edit" asp-route-id="@document.Id"
                                                           class="btn btn-outline-primary btn-sm" title="Редактировать">
                                                            <i class="fas fa-pen-to-square"></i>
                                                        </a>

                                                        @if (!documentStyler.IsDeletedDocument(document) && document.IsCompleted)
                                                        {
                                                            <form asp-action="ChangeStatus" method="post" class="d-inline">
                                                                <input type="hidden" name="id" value="@document.Id" />
                                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Открыть задачу">
                                                                    <i class="fas fa-lock-open"></i>
                                                                </button>
                                                            </form>
                                                        }

                                                        @if (!documentStyler.IsDeletedDocument(document) && !document.IsCompleted)
                                                        {
                                                            <form asp-action="ChangeStatus" method="post" class="d-inline">
                                                                <input type="hidden" name="id" value="@document.Id" />
                                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Закрыть задачу">
                                                                    <i class="fas fa-lock"></i>
                                                                </button>
                                                            </form>
                                                        }

                                                        @if (documentStyler.IsDeletedDocument(document) && authService.IsAdmin)
                                                        {
                                                            <form asp-action="RecoverDeleted" method="post" class="d-inline">
                                                                <input type="hidden" name="id" value="@document.Id" />
                                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Восстановить запись">
                                                                    <i class="fas fa-undo-alt"></i>
                                                                </button>
                                                            </form>
                                                        }

                                                             @*Проверка на владельца записи*@
                                                        @if (document.CreatedByEmployeeId == authService.IdCurrentUser || authService.IsAdmin)
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@document.Id"
                                                               class="btn btn-outline-danger btn-sm" title="Удалить">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </a>
                                                        }

                                                            <a asp-controller="Documents" 
                                                               asp-action="ExportToCsv" 
                                                               asp-route-id="@document.Id"
                                                               class="btn btn-outline-info btn-sm" 
                                                               title="Экспорт в CSV">
                                                                <i class="fas fa-file-csv"></i>
                                                            </a>
                                                    </div>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Пагинация -->
        @if (Model.PagedDocuments.TotalPages > 1)
        {
            <div class="row mt-3">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @GetAtributePreviousPage(Model.PagedDocuments)">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-inputSearch="@Model.InputString"
                                   asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                   asp-route-page="@(Model.PagedDocuments.PageNumber - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int pageNumber = 1; pageNumber <= Model.PagedDocuments.TotalPages; pageNumber++)
                            {
                                <li class="page-item @GetAtributeCurrentPage(Model.PagedDocuments, pageNumber)">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-inputSearch="@Model.InputString"
                                       asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                       asp-route-page="@pageNumber">@pageNumber</a>
                                </li>
                            }

                            <li class="page-item @GetAtributeNextPage(Model.PagedDocuments)">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-inputSearch="@Model.InputString"
                                   asp-route-pageSize="@Model.PagedDocuments.PageSize"
                                   asp-route-page="@(Model.PagedDocuments.PageNumber + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-warning">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-file-alt fa-2x text-warning mb-2"></i>
                        <h6 class="text-warning mb-2">Документы не найдены</h6>
                        <p class="text-muted mb-0 small">По вашему запросу ничего не найдено</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@functions {
    private string GetAtributePreviousPage<T>(PagedResult<T> pagedResult)
    {
        if (!pagedResult.HasPreviousPage)
        {
            return ButtonStatesCssClassDictionary.Disabled;
        }

        return string.Empty;
    }

    private string GetAtributeCurrentPage<T>(PagedResult<T> pagedResult, int pageNumber)
    {
        if (Model.PagedDocuments.PageNumber == pageNumber)
        {
            return ButtonStatesCssClassDictionary.Active;
        }

        return string.Empty;
    }

    private string GetAtributeNextPage<T>(PagedResult<T> pagedResult)
    {
        if (!pagedResult.HasNextPage)
        {
            return  ButtonStatesCssClassDictionary.Disabled;
        }

        return string.Empty;
    }
}