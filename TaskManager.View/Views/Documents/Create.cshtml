@using TaskManager.Domain.Services
@using TaskManager.View.ViewModel;
@using TaskManager.View.ViewModel.Documents

@inject IAuthService authService
@model CreateDocumentViewModel

@{
    ViewData["Title"] = "Добавление Документа";
}

<style>
    .readonly-disabled {
        background-color: #f8f9fa;
        opacity: 1;
        pointer-events: none;
        cursor: not-allowed;
        border-color: #dee2e6;
    }

    .readonly-disabled::placeholder {
        color: #6c757d;
    }

    .required-field::after {
        content: " *";
        color: #dc3545;
    }
</style>

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Добавление документа</h5>
                    <p class="text-muted mb-0 small">Создание нового документа в системе документооборота</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white py-2">
                    <h6 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Добавить новый документ
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" class="row g-3">
                        <!-- Исходные данные документа -->
                        <div class="col-12">
                            <h6 class="border-bottom pb-2 text-success">Входные данные документа</h6>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 text-nowrap">Исх.:</label>
                                    <input type="text" class="form-control" asp-for="Document.OutgoingDocumentNumberInputDocument" placeholder="Введите исходящий номер">
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 text-nowrap">Дата:</label>
                                    <input type="date" class="form-control" asp-for="Document.SourceDocumentDateInputDocument">
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 text-nowrap">Заказчик:</label>
                                    <input type="text" class="form-control" asp-for="Document.CustomerInputDocument" placeholder="Введите название заказчика">
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <textarea class="form-control" placeholder="Краткое содержание документа" asp-for="Document.DocumentSummaryInputDocument" rows="3"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">
                                    <input class="form-check-input" type="checkbox" id="IsExternalDocumentInputDocument" asp-for="Document.IsExternalDocumentInputDocument" />
                                    <label class="form-check-label text-nowrap">Внешний документ</label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field text-nowrap">Вх(46 ЦНИИ):</label>
                                    <input type="text" class="form-control" id="IncomingDocumentNumberInputDocument" asp-for="Document.IncomingDocumentNumberInputDocument" placeholder="Введите входящий номер" required>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field text-nowrap">Дата:</label>
                                    <input type="date" class="form-control" asp-for="Document.IncomingDocumentDateInputDocument" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Ответственные отделы:</label>
                                    <input type="text" class="form-control" asp-for="Document.ResponsibleDepartmentsInputDocument" placeholder="Введите отделы через запятую">
                                </div>
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label required-field text-nowrap mb-0">Выполнить до:</label>
                                    <input type="date" class="form-control" asp-for="Document.TaskDueDateInputDocument" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <label class="form-label text-nowrap mb-1">Ответственный сотрудник:</label>
                                <select asp-for="Document.IdResponsibleEmployeeInputDocument"
                                        class="form-control form-control-sm py-1"
                                        asp-items="@Model.ResponsibleEmployees">
                                    <option value="">Выберите сотрудника</option>
                                </select>
                            </div>
                        </div>

                        <!-- Выходные данные документа -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 text-success">Выходные данные документа</h6>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">
                                    <input class="form-check-input" type="checkbox" id="IsExternalDocumentOutputDocument" asp-for="Document.IsExternalDocumentOutputDocument" />
                                    <label class="form-check-label text-nowrap">Внешний документ</label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Исх (46 ЦНИИ):</label>
                                    <input type="text" class="form-control outgoing-number-output" id="OutgoingDocumentNumberOutputDocument" asp-for="Document.OutgoingDocumentNumberOutputDocument" placeholder="Номер исходящего">
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Дата исходящего:</label>
                                    <input type="date" class="form-control" asp-for="Document.OutgoingDocumentDateOutputDocument">
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Получатель:</label>
                                    <input type="text" class="form-control" asp-for="Document.RecipientOutputDocument" placeholder="Введите получателя">
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <textarea placeholder="Краткое содержание документа" class="form-control" asp-for="Document.DocumentSummaryOutputDocument" rows="3"></textarea>
                        </div>

                        <!-- Контроль и действия -->
                        <div class="col-12 mt-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="Document.IsUnderControl" />
                                    <label class="form-check-label text-uppercase fw-bold text-nowrap">На контроле</label>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success px-4">
                                        <i class="fas fa-plus me-2"></i>Создать
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-arrow-left me-2"></i>Назад к списку
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const externalInputCheckbox = document.getElementById('IsExternalDocumentInputDocument');
            const incomingNumberInput = document.getElementById('IncomingDocumentNumberInputDocument');

            const externalOutputCheckbox = document.getElementById('IsExternalDocumentOutputDocument');
            const outgoingNumberOutput = document.getElementById('OutgoingDocumentNumberOutputDocument');

            function updateIncomingDocumentField() {
                if (externalInputCheckbox && externalInputCheckbox.checked) {
                    incomingNumberInput.removeAttribute('readonly');
                    incomingNumberInput.classList.remove('readonly-disabled');
                    incomingNumberInput.placeholder = 'Введите входящий номер';
                    incomingNumberInput.required = true;

                    if (incomingNumberInput.value === 'нет') {
                        incomingNumberInput.value = '';
                    }

                } else {
                    incomingNumberInput.value = 'нет';
                    incomingNumberInput.setAttribute('readonly', 'readonly');
                    incomingNumberInput.classList.add('readonly-disabled');
                    incomingNumberInput.required = false;
                }
            }

            function updateOutgoingDocumentField() {
                if (externalOutputCheckbox && externalOutputCheckbox.checked) {
                    outgoingNumberOutput.removeAttribute('readonly');
                    outgoingNumberOutput.classList.remove('readonly-disabled');
                    outgoingNumberOutput.placeholder = 'Введите исходящий номер';

                    if (outgoingNumberOutput.value === 'нет') {
                        outgoingNumberOutput.value = '';
                    }

                } else {
                    outgoingNumberOutput.value = 'нет';
                    outgoingNumberOutput.setAttribute('readonly', 'readonly');
                    outgoingNumberOutput.classList.add('readonly-disabled');
                }
            }

            if (externalInputCheckbox && incomingNumberInput) {
                externalInputCheckbox.addEventListener('change', updateIncomingDocumentField);
                updateIncomingDocumentField();
            }

            if (externalOutputCheckbox && outgoingNumberOutput) {
                externalOutputCheckbox.addEventListener('change', updateOutgoingDocumentField);
                updateOutgoingDocumentField();
            }
        });
    </script>
}