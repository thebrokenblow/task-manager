@using TaskManager.Domain.Model.Documents
@using TaskManager.Domain.Services
@using TaskManager.Domain.Utils
@using TaskManager.View.Utils
@using TaskManager.View.ViewModel;
@using TaskManager.View.ViewModel.Documents

@model DocumentForDeleteModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Удаление Документа";
}

<style>
    .readonly-disabled {
        background-color: #f8f9fa;
        opacity: 1;
        pointer-events: none;
        cursor: not-allowed;
        border-color: #dee2e6;
    }

    .readonly-disabled::placeholder {
        color: #6c757d;
    }

    .required-field::after {
        content: " *";
        color: #dc3545;
    }
</style>

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1 text-danger">Удаление документа</h5>
                    <p class="text-muted mb-0 small">Удаление документа из системы документооборота</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-2">
                    <h6 class="mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Удалить документ
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Предупреждение об удалении -->
                    <div class="alert alert-danger mb-4">
                        <div class="d-flex">
                            <i class="fas fa-exclamation-triangle me-3 mt-1"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Внимание!</h6>
                                <p class="mb-0">
                                    Вы собираетесь удалить документ из системы.
                                </p>
                            </div>
                        </div>
                    </div>

                    <form method="post" asp-action="DeleteConfirmed" class="row g-3">
                        <input type="hidden" asp-for="Id" />

                        <!-- Исходные данные документа -->
                        <div class="col-12">
                            <h6 class="border-bottom pb-2 text-danger">Входные данные документа</h6>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Исх.:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.OutgoingDocumentNumberInputDocument" readonly>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Дата:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@(Model.SourceDocumentDateInputDocument?.ToString(DateFormatDictionary.DateFormatDdMmYyyy))" readonly>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Заказчик:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.CustomerInputDocument" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <textarea class="form-control readonly-disabled" rows="3" readonly>@Model.DocumentSummaryInputDocument</textarea>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">
                                    <input class="form-check-input readonly-disabled" type="checkbox" @(Model.IsExternalDocumentInputDocument ? "checked" : string.Empty) readonly disabled>
                                    <label class="form-check-label text-nowrap">Внешний документ</label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field">Вх(46 ЦНИИ):</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.IncomingDocumentNumberInputDocument" readonly>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field">Дата:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.IncomingDocumentDateInputDocument.ToString(DateFormatDictionary.DateFormatDdMmYyyy)" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Ответственные отделы:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.ResponsibleDepartmentsInputDocument" readonly>
                                </div>
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label required-field text-nowrap mb-0">Выполнить до:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.TaskDueDateInputDocument.ToString(DateFormatDictionary.DateFormatDdMmYyyy)" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <label class="form-label text-nowrap">Ответственный сотрудник:</label>
                                <input type="text" class="form-control readonly-disabled" value="@Model.ResponsibleEmployeeFullName" readonly>
                            </div>
                        </div>

                        <!-- Выходные данные документа -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 text-danger">Выходные данные документа</h6>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">
                                    <input class="form-check-input readonly-disabled" type="checkbox" @(Model.IsExternalDocumentOutputDocument ? "checked" : string.Empty) readonly disabled>
                                    <label class="form-check-label text-nowrap">Внешний документ</label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Исх (46 ЦНИИ):</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.OutgoingDocumentNumberOutputDocument" readonly>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Дата исходящего:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@(Model.OutgoingDocumentDateOutputDocument?.ToString(DateFormatDictionary.DateFormatDdMmYyyy) ?? string.Empty)" readonly>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">Получатель:</label>
                                    <input type="text" class="form-control readonly-disabled" value="@Model.RecipientOutputDocument" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <textarea class="form-control readonly-disabled" rows="3" readonly>@Model.DocumentSummaryOutputDocument</textarea>
                        </div>

                        <!-- Статусы -->
                        <div class="col-12">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input readonly-disabled" type="checkbox" @(Model.IsUnderControl ? "checked" : string.Empty) readonly disabled>
                                        <label class="form-check-label text-nowrap fw-bold">На контроле</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div></div>
                                        <div>
                                            <button type="submit" class="btn btn-danger px-4">
                                                <i class="fas fa-trash-alt me-2"></i>Удалить
                                            </button>
                                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                                <i class="fas fa-arrow-left me-2"></i>Назад к списку
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>