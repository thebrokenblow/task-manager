@using TaskManager.Domain.Enums
@using TaskManager.Domain.Services
@using TaskManager.Domain.Utilities
@using TaskManager.View.ViewModel.Documents

@model EditDocumentViewModel
@inject IAuthService authService

@{
    ViewData["Title"] = "Редактирование Документа";

    var isNotReadonly = !Model.Document.IsCompleted && (authService.IsAdmin || authService.IdCurrentUser == Model.Document.CreatedByEmployeeId);

    var isDeletedDocument = Model.Document.CreatedByEmployeeId == authService.IdAdmin &&
                            Model.Document.RemovedByEmployeeId != null &&
                            Model.Document.RemoveDateTime != null;
}

@functions {
    string FormatDateForHtml(DateOnly? date)
    {
        if (date == null)
        {
            return string.Empty;
        }

        return date.Value.ToString(DateFormatDictionary.DateFormatYyyyMmDd);
    }
}

<div class="container-fluid py-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Редактирование документа</h5>
                    <p class="text-muted mb-0 small">
                        Редактирование документа в системе документооборота
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white py-2">
                    <h6 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        Редактирование документа
                    </h6>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="Edit" class="row g-3">
                        <!-- Скрытые поля Id -->
                        <input type="hidden" name="Id" value="@Model.Document.Id" />
                        <input type="hidden" name="CreatedByEmployeeId" value="@Model.Document.CreatedByEmployeeId" />


                        <!-- Исходные данные документа -->
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="border-bottom pb-2 text-primary">
                                    Входные данные документа
                                </h6>
                                <p class="text-end text-primary">
                                    Номер документа: @Model.Document.Id
                                </p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Исх.:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="OutgoingDocumentNumberInputDocument"
                                               value="@Model.Document.OutgoingDocumentNumberInputDocument"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="OutgoingDocumentNumberInputDocument"
                                               value="@Model.Document.OutgoingDocumentNumberInputDocument"
                                               placeholder="Введите исходящий номер">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Дата:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="date"
                                               class="form-control readonly-disabled"
                                               name="SourceDocumentDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.SourceDocumentDateInputDocument)"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="date"
                                               class="form-control"
                                               name="SourceDocumentDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.SourceDocumentDateInputDocument)">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Заказчик:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="CustomerInputDocument"
                                               value="@Model.Document.CustomerInputDocument"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="CustomerInputDocument"
                                               value="@Model.Document.CustomerInputDocument"
                                               placeholder="Введите название заказчика">
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12">

                            @if ((!isNotReadonly || isDeletedDocument) && authService.Role != UserRole.Boss)
                            {
                                <textarea class="form-control readonly-disabled"
                                          name="DocumentSummaryInputDocument"
                                          rows="3"
                                          readonly>@Model.Document.DocumentSummaryInputDocument
                                </textarea>
                            }
                            else
                            {
                                <textarea class="form-control"
                                          name="DocumentSummaryInputDocument"
                                          placeholder="Краткое содержание документа"
                                          rows="3">@Model.Document.DocumentSummaryInputDocument
                                </textarea>
                            }
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input class="form-check-input readonly-disabled"
                                               type="checkbox"
                                               @(Model.Document.IsExternalDocumentInputDocument ? "checked" : string.Empty)
                                               readonly
                                               disabled>

                                        <input type="hidden"
                                               name="IsExternalDocumentInputDocument"
                                               value="@(Model.Document.IsExternalDocumentInputDocument ? "true" : "false")">
                                    }
                                    else
                                    {
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="IsExternalDocumentInputDocument"
                                               value="true"
                                               @(Model.Document.IsExternalDocumentInputDocument ? "checked" : string.Empty)>

                                        <input type="hidden" name="IsExternalDocumentInputDocument" value="false">
                                    }
                                    <label class="form-check-label text-nowrap">
                                        Внешний документ
                                    </label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field">
                                        Вх(46 ЦНИИ):
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="IncomingDocumentNumberInputDocument"
                                               value="@Model.Document.IncomingDocumentNumberInputDocument"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="IncomingDocumentNumberInputDocument"
                                               value="@Model.Document.IncomingDocumentNumberInputDocument"
                                               placeholder="Введите входящий номер">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field">
                                        Дата:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="date"
                                               class="form-control readonly-disabled"
                                               name="IncomingDocumentDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.IncomingDocumentDateInputDocument)"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="date"
                                               class="form-control"
                                               name="IncomingDocumentDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.IncomingDocumentDateInputDocument)"
                                               required>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Ответственный отдел:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <select name="ResponsibleDepartmentInputDocument"
                                                class="form-control form-control-sm py-1 readonly-disabled">
                                            <option value="">Выберите отдел</option>
                                            @foreach (var responsibleDepartment in Model.ResponsibleDepartments)
                                            {
                                                var isSelected = responsibleDepartment.Value == Model.Document.ResponsibleDepartmentInputDocument?.ToString();
                                                <option value="@responsibleDepartment.Value" selected="@isSelected">
                                                    @responsibleDepartment.Text
                                                </option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <select name="ResponsibleDepartmentInputDocument"
                                                class="form-control form-control-sm py-1">
                                            Ответственный отдел:
                                            @foreach (var responsibleDepartment in Model.ResponsibleDepartments)
                                            {
                                                var isSelected = responsibleDepartment.Value == Model.Document.ResponsibleDepartmentInputDocument?.ToString();
                                                <option value="@responsibleDepartment.Value" selected="@isSelected">
                                                    @responsibleDepartment.Text
                                                </option>
                                            }
                                        </select>
                                    }
                                </div>
                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Привлечённые отделы:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="ResponsibleDepartmentsInputDocument"
                                               value="@Model.Document.ResponsibleDepartmentsInputDocument"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="ResponsibleDepartmentsInputDocument"
                                               value="@Model.Document.ResponsibleDepartmentsInputDocument"
                                               placeholder="Введите отделы через запятую">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0 required-field">
                                        Выполнить до:
                                    </label>

                                    @if (!isNotReadonly || isDeletedDocument)
                                    {
                                        <input type="date"
                                               class="form-control readonly-disabled"
                                               name="TaskDueDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.TaskDueDateInputDocument)"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="date"
                                               class="form-control"
                                               name="TaskDueDateInputDocument"
                                               value="@FormatDateForHtml(Model.Document.TaskDueDateInputDocument)"
                                               required>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-end gap-4">
                                <label class="form-label text-nowrap mb-1">
                                    Ответственный сотрудник:
                                </label>

                                @if ((!isNotReadonly || isDeletedDocument) && authService.Role != UserRole.Boss)
                                {
                                    <select name="IdResponsibleEmployeeInputDocument"
                                            class="form-control form-control-sm py-1 readonly-disabled">
                                        <option value="">Выберите сотрудника</option>
                                        @foreach (var employee in Model.ResponsibleEmployees)
                                        {
                                            var isSelected = employee.Value == Model.Document.IdResponsibleEmployeeInputDocument?.ToString();
                                            <option value="@employee.Value" selected="@isSelected">
                                                @employee.Text
                                            </option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <select name="IdResponsibleEmployeeInputDocument"
                                            class="form-control form-control-sm py-1">
                                        <option value="">Выберите сотрудника</option>
                                        @foreach (var employee in Model.ResponsibleEmployees)
                                        {
                                            var isSelected = employee.Value == Model.Document.IdResponsibleEmployeeInputDocument?.ToString();
                                            <option value="@employee.Value" selected="@isSelected">
                                                @employee.Text
                                            </option>
                                        }
                                    </select>
                                }
                            </div>
                        </div>

                        <!-- Выходные данные документа -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 text-primary">
                                Выходные данные документа
                            </h6>

                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="border-start border-3 border-danger ps-3 py-2 mb-3 bg-danger bg-opacity-10">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-exclamation-triangle text-danger mt-1 me-2"></i>
                                        <div>
                                            <span class="text-danger fw-medium">@Model.ErrorMessage</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-12">
                            <div class="d-flex align-items-center gap-4">
                                <div class="form-check mb-0">
                                    @if (Model.Document.IsCompleted || isDeletedDocument)
                                    {
                                        <input class="form-check-input readonly-disabled"
                                               type="checkbox"
                                               name="IsExternalDocumentOutputDocument"
                                               value="true"
                                               @(Model.Document.IsExternalDocumentOutputDocument ? "checked" : string.Empty)
                                               readonly
                                               disabled>

                                        <input type="hidden"
                                               name="IsExternalDocumentOutputDocument"
                                               value="@(Model.Document.IsExternalDocumentOutputDocument ? "true" : "false")">
                                    }
                                    else
                                    {
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="IsExternalDocumentOutputDocument"
                                               value="true"
                                               @(Model.Document.IsExternalDocumentOutputDocument ? "checked" : string.Empty)>

                                        <input type="hidden" name="IsExternalDocumentOutputDocument" value="false">
                                    }
                                    <label class="form-check-label text-nowrap">
                                        Внешний документ
                                    </label>
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Исх (46 ЦНИИ):
                                    </label>

                                    @if (Model.Document.IsCompleted || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="OutgoingDocumentNumberOutputDocument"
                                               value="@Model.Document.OutgoingDocumentNumberOutputDocument"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="OutgoingDocumentNumberOutputDocument"
                                               value="@Model.Document.OutgoingDocumentNumberOutputDocument"
                                               placeholder="Введите исходящий номер">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Дата исходящего:
                                    </label>

                                    @if (Model.Document.IsCompleted || isDeletedDocument)
                                    {
                                        <input type="date"
                                               class="form-control readonly-disabled"
                                               name="OutgoingDocumentDateOutputDocument"
                                               value="@FormatDateForHtml(Model.Document.OutgoingDocumentDateOutputDocument)"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="date"
                                               class="form-control"
                                               name="OutgoingDocumentDateOutputDocument"
                                               value="@FormatDateForHtml(Model.Document.OutgoingDocumentDateOutputDocument)">
                                    }
                                </div>

                                <div class="d-flex align-items-center gap-2 flex-fill">
                                    <label class="form-label text-nowrap mb-0">
                                        Получатель:
                                    </label>
                                    @if (Model.Document.IsCompleted || isDeletedDocument)
                                    {
                                        <input type="text"
                                               class="form-control readonly-disabled"
                                               name="RecipientOutputDocument"
                                               value="@Model.Document.RecipientOutputDocument"
                                               placeholder="Введите получателя"
                                               readonly>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               class="form-control"
                                               name="RecipientOutputDocument"
                                               value="@Model.Document.RecipientOutputDocument"
                                               placeholder="Введите получателя">
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            @if (Model.Document.IsCompleted || isDeletedDocument)
                            {
                                <textarea placeholder="Краткое содержание документа"
                                      class="form-control readonly-disabled"
                                      name="DocumentSummaryOutputDocument"
                                      rows="3"
                                      readonly>@Model.Document.DocumentSummaryOutputDocument</textarea>
                            }
                            else
                            {
                                <textarea placeholder="Краткое содержание документа"
                                      class="form-control"
                                      name="DocumentSummaryOutputDocument"
                                      rows="3">@Model.Document.DocumentSummaryOutputDocument</textarea>
                            }
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center gap-2">
                                <label class="form-label text-nowrap mb-0 text-nowrap">Индивид.ключ:</label>
        
                                @if (Model.Document.IsCompleted || isDeletedDocument)
                                {
                                    <input type="text" 
                                           class="form-control readonly-disabled"
                                           asp-for="Document.SubjectOutputDocument" 
                                           name="SubjectOutputDocument" 
                                           readonly>
                                }
                                else
                                {
                                    <input type="text"
                                           class="form-control"
                                           asp-for="Document.SubjectOutputDocument"
                                           name="SubjectOutputDocument"
                                           placeholder="Введите индивидуальный ключ">
                                }
                            </div>
                        </div>

                        <!-- Статусы и действия на одном уровне -->
                        <div class="col-12 mt-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-4">
                                    <div class="form-check mb-0">
                                        @if (!isNotReadonly || isDeletedDocument)
                                        {
                                            <input class="form-check-input readonly-disabled"
                                                   type="checkbox"
                                                   @(Model.Document.IsUnderControl ? "checked" : string.Empty)
                                                   readonly
                                                   disabled>

                                            <input type="hidden"
                                                   name="IsUnderControl"
                                                   value="@(Model.Document.IsUnderControl ? "true" : "false")" />
                                        }
                                        else
                                        {
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="IsUnderControl"
                                                   value="true"
                                                   @(Model.Document.IsUnderControl ? "checked" : string.Empty)>

                                            <input type="hidden" name="IsUnderControl" value="false" />
                                        }

                                        <label class="form-check-label text-nowrap text-uppercase fw-bold">
                                            На контроле
                                        </label>
                                    </div>

                                    <!-- Информация о последнем редактировании -->
                                    <div class="border-start ps-4 border-danger">
                                        <div class="d-flex flex-column">
                                            <small class="text-muted mb-1">Последнее редактирование:</small>
                                            <span class="small fw-semibold text-danger">
                                                @if (Model.Document.FullNameLastEditedEmployee != null && Model.Document.LastEditedDateTime.HasValue)
                                                {
                                                    @($"{Model.Document.FullNameLastEditedEmployee}, {Model.Document.LastEditedDateTime.Value.ToString(DateFormatDictionary.DateTimeFormatDdMmYyyyHhMm)}")
                                                }
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Кнопки действий -->
                                <div>
                                    @if (Model.Document.IsCompleted || isDeletedDocument)
                                    {
                                        <button type="submit" class="btn btn-primary px-4 disabled" disabled>
                                            <i class="fas fa-edit me-2"></i>Сохранить
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary px-4">
                                            <i class="fas fa-edit me-2"></i>Сохранить
                                        </button>
                                    }
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-arrow-left me-2"></i>Назад к списку
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const isCompleted = @Json.Serialize(Model.Document.IsCompleted);
            const isDeletedDocuemnt = @Json.Serialize(Model.Document.CreatedByEmployeeId == authService.IdAdmin &&
                                                                                            Model.Document.RemovedByEmployeeId != null &&
                                                                                            Model.Document.RemoveDateTime != null);

        if (isCompleted || isDeletedDocuemnt) {
            return;
        }

            const externalInputCheckbox = document.querySelector('input[name="IsExternalDocumentInputDocument"]');
            const incomingNumberInput = document.querySelector('input[name="IncomingDocumentNumberInputDocument"]');

            const externalOutputCheckbox = document.querySelector('input[name="IsExternalDocumentOutputDocument"]');
            const outgoingNumberOutput = document.querySelector('input[name="OutgoingDocumentNumberOutputDocument"]');

            function updateIncomingDocumentField() {
                if (externalInputCheckbox && externalInputCheckbox.checked) {
                    incomingNumberInput.removeAttribute('readonly');
                    incomingNumberInput.classList.remove('readonly-disabled');
                    incomingNumberInput.placeholder = 'Введите входящий номер';
                    incomingNumberInput.required = true;

                    if (incomingNumberInput.value === 'нет') {
                        incomingNumberInput.value = '';
                    }

                } else {
                    incomingNumberInput.value = 'нет';
                    incomingNumberInput.setAttribute('readonly', 'readonly');
                    incomingNumberInput.classList.add('readonly-disabled');
                    incomingNumberInput.required = false;
                }
            }

            function updateOutgoingDocumentField() {
                if (externalOutputCheckbox && externalOutputCheckbox.checked) {
                    outgoingNumberOutput.removeAttribute('readonly');
                    outgoingNumberOutput.classList.remove('readonly-disabled');
                    outgoingNumberOutput.placeholder = 'Введите исходящий номер';

                    if (outgoingNumberOutput.value === 'нет') {
                        outgoingNumberOutput.value = '';
                    }

                } else {
                    outgoingNumberOutput.value = 'нет';
                    outgoingNumberOutput.setAttribute('readonly', 'readonly');
                    outgoingNumberOutput.classList.add('readonly-disabled');
                }
            }

            if (externalInputCheckbox && incomingNumberInput) {
                externalInputCheckbox.addEventListener('change', updateIncomingDocumentField);
                updateIncomingDocumentField();
            }

            if (externalOutputCheckbox && outgoingNumberOutput) {
                externalOutputCheckbox.addEventListener('change', updateOutgoingDocumentField);
                updateOutgoingDocumentField();
            }
        });
    </script>
}